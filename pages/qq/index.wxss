page {
    height: 100%;
}
.qq-container {
    width:100%; height:100%; background: white;
}

.query {
    display: flex; flex-direction: row; padding:12rpx 10px;
}
.query input {
    flex-grow: 1; border:1px #ddd solid; border-radius:5px; margin-right:10px; height:35px; line-height: 35px; padding-left:5px;
}

.query button {
    line-height:35px; height:35px;
}

.result {
    padding:10rpx; font-size:32rpx; line-height:40rpx;
}
.detail {
    font-size:32rpx; line-height:40rpx; color: #888; padding:10rpx;
}